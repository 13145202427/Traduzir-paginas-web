{

    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "version": "1.8",
  
    "description": "__MSG_extensionDescription__",
  
    "icons": {
        "48": "icons/google-translate-48.png",
        "96": "icons/google-translate-96.png"
    },

    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab"
    ],

    "web_accessible_resources": [
        "w3css/4/w3.css"
    ],

    "browser_action": {
        "default_icon": {
            "16": "icons/google-translate-16.png",
            "32": "icons/google-translate-32.png"
        },
        "default_title": "__MSG_pageActionTitle__",
        "default_popup": "popup/popup.html"
    },

    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    }
}