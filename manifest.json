{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "8.9.3",
    "homepage_url": "https://github.com/FilipePS/Traduzir-paginas-web",

    "browser_specific_settings": {
        "gecko": {
            "id": "{036a55b4-5e72-4d05-a06c-cba2dfcc134a}",
            "strict_min_version": "63.0"
        }
    },
	
    "commands": {
        "toggle-translation": {
            "suggested_key": {
                "default": "Alt+T"
            },
            "description": "Switch between the translated and the original page."
        }
    },

    "icons": {
        "32": "/icons/google-translate-32.png",
        "64": "/icons/google-translate-64.png",
        "128": "/icons/google-translate-128.png"
    },

    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "/icons/google-translate-32.png",
        "/icons/yandex-translate-32.png",
        "/icons/swap-32.png"
    ],

    "options_ui": {
        "page": "/options/options.html",
        "open_in_tab": false,
        "browser_style": false
    },

    "browser_action": {
        "browser_style": false,
        "default_icon": "/icons/google-translate-32.png",
        "default_title": "__MSG_pageActionTitle__"
    },

    "page_action": {
        "browser_style": false,
        "default_icon": "/icons/google-translate-32.png",
        "default_title": "__MSG_pageActionTitle__",
        "default_popup": "/popup/popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "all_frames": false,
            "js": ["/contentScript/checkScriptIsInjected.js"]
        }, 
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "all_frames": true,
            "js": ["/lib/plataformInfo.js", "/lib/languages.js", "/lib/config.js", "/contentScript/showOriginal.js", "/contentScript/pageTranslator.js", "/contentScript/translateSelected.js", "/contentScript/showTranslated.js"]
        }, {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "all_frames": false,
            "js": ["/lib/i18n.js", "/contentScript/popupMobile.js"]
        }
    ],

    "background": {
        "persistent": true,
        "scripts": ["/lib/plataformInfo.js", "/lib/languages.js", "/background/translationCache.js", "/background/translationService.js", "/background/textToSpeech.js", "/lib/config.js", "/background/background.js"]
    }
}